extends ../layout

block content

    form(action="/materias/new_materias", method= "POST")
        .container.py-2
            .row
                .col-12.py-2
                    h2= title
                .col-md-6.col-12
                    label.form-label(for="materia") Nombre
                    input#name.form-control(type="text",name="materia")

                .col-md-12.col-12.py-2
                    button.btn.btn-primary(type="submit") Crear
                    a.btn.btn-secondary(href="/materias") Cancelar
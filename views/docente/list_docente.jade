extends ../layout

block content
    .container.py-2
        .row
            .col-12.py-2
                h2= title
            .col-12.py-2
                table.table
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Nombre
                            th(scope='col') Materia
                    tbody
                        -for(let i = 0; i < docentes_materias.length; i++)
                            tr
                                th(scope='row')=docentes_materias[i].id
                                td=docentes_materias[i].nombre_docente
                                td=docentes_materias[i].materia

            .col-12.py-2
                a.btn.btn-primary(href="/docente/new_docente") Nuevo Docente
                
            